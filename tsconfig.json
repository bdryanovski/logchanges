{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ES2018"],
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node", "github-url-from-git", "@types/jest"],
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "diagnostics": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
  },
  "exclude": ["node_modules", "lib", "templates", "__tests__"]
}